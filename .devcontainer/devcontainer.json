// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/devcontainers/features/rust:1": {
			"version": "1.70",
			"profile": "complete"
		},
		"ghcr.io/lee-orr/rusty-dev-containers/cargo-watch:0": {},
		"ghcr.io/devcontainers/features/python:1": {
			"optimize": true,
			"version": "3.11"
		},
		"ghcr.io/devcontainers-contrib/features/black:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/ruff:1": {
			"version": "latest"
		},
		"ghcr.io/rio/features/chezmoi:1": {},
		"ghcr.io/meaningful-ooo/devcontainer-features/fish:1": {
			"fisher": true
		},
		"ghcr.io/devcontainers-contrib/features/neovim-apt-get:1": {},
		"ghcr.io/devcontainers-contrib/features/starship:1": {}
	},
	"postCreateCommand": "chezmoi init --apply git@github.com:linuxfirstMint/dotfiles.git && pip install -r requirements.txt",
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				//general
				"eamodio.gitlens",
				"GitHub.vscode-pull-request-github",
				"adam-bender.commit-message-editor",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"GitHub.copilot-labs",
				"GitHub.copilot-preview",
				"intellsmi.comment-translate",
				//rust
				"vadimcn.vscode-lldb",
				"rust-lang.rust-analyzer",
				"serayuzgur.crates",
				"tamasfe.even-better-toml",
				"swellaby.vscode-rust-test-adapter",
				//python
				"ms-python.python",
				"ms-python.black-formatter",
				"charliermarsh.ruff",
				"KevinRose.vsc-python-indent",
				"LittleFoxTeam.vscode-python-test-adapter"
			],
			"[rust]": {
				"editor.defaultFormatter": "rust-lang.rust-analyzer",
				"editor.formatOnPaste": true,
				"editor.formatOnSave": true,
				"editor.formatOnType": true,
				"rust-analyzer.checkOnSave": true,
				"rust-analyzer.check.command": "clippy"
			},
			"[toml]": {
				"editor.defaultFormatter": "be5invis.toml"
			},
			"[python]": {
				"python.languageServer": "Pylance",
				"editor.defaultFormatter": "ms-python.black-formatter",
				"editor.formatOnSave": true,
				"editor.formatOnPaste": true,
				"python.linting.enabled": true,
				"python.linting.ruffEnabled": true
			},
			"files.watcherExclude": {
				"**/target/**": true
			}
		}
	},
	//
	"containerEnv": {
		"TZ": "Asia/Tokyo" // spyder依存のbabelにおいてTZの設定が必要
	}
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// Configure tool-specific properties.
}